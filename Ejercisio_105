
class Estudiante:
    def __init__(self, nombre, edad, grado):
        self.nombre= nombre
        self.edad= edad
        self.grado=grado

    def estudiar(self):
        print("Estudiando... ")

nombre= input("Ingrese su nombre:__ ")
edad= input("ingrese su edad:__ ")
grado=input("Por ultimo ingrese su grado:__ ")

estudiante= Estudiante(nombre,edad,grado)

print(f"""
        DATOS DEL ESTUDIANTE:\n\n
        Nombre: {estudiante.nombre}\n 
        Nombre: {estudiante.edad}\n
        Nombre: {estudiante.grado}\n
      """)

while True:
    estudiar= input()
    if (estudiar.lower()== "estudiar"):
        estudiante.estudiar()
